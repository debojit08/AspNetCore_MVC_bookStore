@{
    ViewData["Title"] = "Book Details " + Model.Title;
}
@using BookStore_App.Models;
@model BookModel;



<div class="container">
    <h1 class="display-4">Book Details</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/b1.jpeg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/b2.jpeg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/b4.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">


            <div class="com-md-12">
                <h1>@Model.Title</</h1>
            </div>



            <div class="com-md-12 text-primary">
                <span class="label label-primary">By:</span>
                <span class="monospace">@Model.Author</span>

            </div>



            <div class="com-md-12">
                <p class="Description">
                    <p>@Model.Description</p>
            </div>


            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">
                        Read More
                    </button>
                </div>
            </div>
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Categories-@Model.Categories</span></li>
                <li class="list-group-item"><span class="font-weight-bold">Pages-@Model.Pages</span></li>
                <li class="list-group-item"><span class="font-weight-bold">Language-@Model.languageName</span></li>
            </ul>

        </div>
    </div>
    <hr />
    <div class="py-5 ">
        <h3 class="h3 text-center">Similar Books</h3>
        <div class="row">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-md-4">
                    <div class="card md-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">book.Title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-primary">Details</a> <small class="text-muted">book.Author</small>

                            </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

